{
    "version": 8,
    "configurePresets": [
        {
            "name": "qt-clangcl-debug",
            "displayName": "Qt + clang-cl + Ninja (Debug)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_PREFIX_PATH": "${env:QTDIR}",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ENABLE_CLANG_TIDY": "ON"
            }
        },
        {
            "name": "qt-clangcl-release",
            "displayName": "Qt + clang-cl + Ninja (Release)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_PREFIX_PATH": "${env:QTDIR}",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ENABLE_CLANG_TIDY": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug",
            "configurePreset": "qt-clangcl-debug"
        },
        {
            "name": "build-release",
            "configurePreset": "qt-clangcl-release"
        }
    ]
}
